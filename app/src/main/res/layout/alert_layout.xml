<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_biankuang"
    android:orientation="vertical">

    <EditText
        android:id="@+id/Edit_pwd"
        style="@style/AlertDialog_up_pwd"
        android:hint="@string/srymm" />
    <EditText
        android:id="@+id/Edit_pwd1"
        style="@style/AlertDialog_up_pwd"
        android:hint="@string/srxmm" />
    <EditText
        android:id="@+id/Edit_pwd2"
        style="@style/AlertDialog_up_pwd"
        android:hint="@string/zcxmm" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:transitionGroup="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/alert_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:background="@drawable/button"
            android:text="@string/dlbt"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="18sp"
            android:typeface="normal" />
    </LinearLayout>

</LinearLayout>
