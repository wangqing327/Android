<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here.
        colorPrimary标题背景
        colorPrimaryDark状态栏和导航栏
        colorAccent控件颜色一般指的是边框
        -->
        <item name="colorPrimary">#384646</item>
        <item name="colorPrimaryDark">#5C6FDB</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!--    查看详情窗口TextView的样式表-->
    <style name="Xq_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#CC362222</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--  组线性布局器样式  -->
    <style name="xq_LineLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:longClickable">true</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--  详情页面图片框样式  -->
    <style name="xq_img">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>
    <!--添加修改页面EditText样式-->
    <style name="add_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/bk</item>

        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>

    </style>
    <!--添加修改页面Button样式-->
    <style name="add_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">40</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <!--      <item name="android:clickable">true</item>表头搜索框样式-->
    <style name="ExRelativeLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:clickable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:minWidth">70dp</item>
    </style>
    <!--    -->
    <style name="zbj">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/background_color</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
